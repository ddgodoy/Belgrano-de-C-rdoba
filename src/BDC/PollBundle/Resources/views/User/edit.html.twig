{% extends 'BDCPollBundle::layout.html.twig' %}
{% form_theme edit_form with ['BDCPollBundle:Form:bootstrap-override.html.twig'] %}  

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><i class="fa fa-users"></i> <a href="{{ path('user') }}">Usuarios</a></li>
                <li class="active">Editar Usuario</li>
            </ol>
        </div>
    </div>    
    <h1 class="page-header">Editar Usuario</h1>
    <div class="row">
        <div class="col-lg-6">
            
            <div class="form-group">
            {{ form_label(edit_form.dni,'DNI') }}
            {{ form_errors(edit_form.dni) }}
            {{ form_widget(edit_form.dni) }}
            </div>
            
            <div class="form-group">
            {{ form_label(edit_form.name,'Nombre') }}
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name) }}
            </div>
            
            <div class="form-group">
            {{ form_label(edit_form.last_name,'Apellido') }}
            {{ form_errors(edit_form.last_name) }}
            {{ form_widget(edit_form.last_name) }}
            </div>
            
            <div class="form-group">
            {{ form_label(edit_form.email,'E-mail') }}
            {{ form_errors(edit_form.email) }}
            {{ form_widget(edit_form.email) }}
            </div>
            
             <div class="form-group">
            {{ form_label(edit_form.password,'Contrase√±a') }}
            {{ form_errors(edit_form.password) }}
            {{ form_widget(edit_form.password) }}
            </div>
            
            

        </div>
    </div>

    <ul class="record_actions">

        <li>{{ form(delete_form) }}</li>
    </ul>


{% endblock %}


